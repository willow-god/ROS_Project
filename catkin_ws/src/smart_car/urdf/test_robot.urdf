<robot name="mycar">

    <material name="Black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="White">
        <color rgba="1 1 1 0.95"/>
    </material>
    <material name="Blue">
        <color rgba="0 0 1 1"/>
    </material>
    <material name="Yellow">
        <color rgba="1 0.4 0 1"/>
    </material>
    
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.5 0.2 0.1" />
                <material name="Yellow"/>
            </geometry>
        </visual>
    </link>
    
    <link name="leftback_link">
        <visual>
           <origin xyz="-0.2 0.10 -0.10" rpy="0 0 0"></origin>
            <geometry>
                <box size="0.1 0.05 0.2" />
            </geometry>
            <material name="Blue"/>
        </visual>
    </link>
    
    <joint name="leftback_joint"  type="continuous">
      <origin xyz="0 0 0.05" rpy="1.5708 1.5708 0" />
      <parent link="base_link" />
      <child  link="leftback_link" />
      <axis   xyz="-1 0 0" />
    </joint>

    
</robot>

