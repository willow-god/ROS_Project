<robot name="mycar">

    <material name="Black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="White">
        <color rgba="1 1 1 0.95"/>
    </material>
    <material name="Blue">
        <color rgba="0 0 1 1"/>
    </material>
    <material name="Yellow">
        <color rgba="1 0.4 0 1"/>
    </material>
    
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.5 0.2 0.1" />
                <material name="Yellow"/>
            </geometry>
        </visual>
    </link>
    
    <link name="leftback_link">
        <visual>
           <origin xyz="-0.19 0.125 -0.10" rpy="0 0 0"></origin>
            <geometry>
                <box size="0.1 0.05 0.2" />
            </geometry>
            <material name="Blue"/>
        </visual>
    </link>
    
    <link name="rightback_link">
        <visual>
           <origin xyz="-0.19 -0.125 -0.10" rpy="0 0 0"></origin>
            <geometry>
                <box size="0.1 0.05 0.2" />
            </geometry>
            <material name="Blue"/>
        </visual>
    </link>
    
    <link name="rightfront_link">
        <visual>
           <origin xyz="0.19 -0.125 -0.10" rpy="0 0 0"></origin>
            <geometry>
                <box size="0.1 0.05 0.2" />
            </geometry>
            <material name="Blue"/>
        </visual>
    </link>
    
    <link name="leftfront_link">
        <visual>
           <origin xyz="0.19 0.125 -0.10" rpy="0 0 0"></origin>
            <geometry>
                <box size="0.1 0.05 0.2" />
            </geometry>
            <material name="Blue"/>
        </visual>
    </link>
    
    <joint name="leftback_joint"  type="continuous">
      <origin xyz="-2 1 0" rpy="0 0 0" />
      <parent link="base_link" />
      <child  link="leftback_link" />
      <axis   xyz="1 0 0" />
    </joint>
    
    <joint name="rightback_joint"  type="continuous">
      <origin xyz="-2 -1 0" rpy="0 1.5077 0" />
      <parent link="base_link" />
      <child  link="rightback_link" />
      <axis   xyz="-1 0 0" />
    </joint>
    
    <joint name="rightfront_joint"  type="continuous">
      <origin xyz="2 -1 0" rpy="0 1.5077 0" />
      <parent link="base_link" />
      <child  link="rightfront_link" />
      <axis   xyz="-1 0 0" />
      </joint>
      
     <joint name="leftfront_joint"  type="continuous">
      <origin xyz="2 1 0" rpy="0 0 0" />
      <parent link="base_link" />
      <child  link="leftfront_link" />
      <axis   xyz="-1 0 0" />
      </joint>

</robot>

